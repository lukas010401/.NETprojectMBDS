<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ChangeHistory[0].Mail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChangeHistory[0].PreviousFlag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChangeHistory[0].PreviousStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChangeHistory[0].UpdatedFlag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChangeHistory[0].UpdatedStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChangeHistory[0].UpdatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChangeHistory[0].UpdateUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ChangeHistory) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Mail.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PreviousFlag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PreviousStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedFlag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateUser.NormalizedUserName)
            </td>
            <!--<td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
